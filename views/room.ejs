<!DOCTYPE html>
<html lang="ja">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>LocalInvaders</title>
        <link href="/stylesheets/bootstrap.min.css" rel="stylesheet">
        <link href="/stylesheets/style.css" rel="stylesheet">
        <link href="/stylesheets/bootswatch.css" rel="stylesheet">
        <!-- ここからwebFont -->
        <link href='http://fonts.googleapis.com/css?family=Lemon' rel='stylesheet' type='text/css'>
        <style>
            body {
                font-family: 'Lemon', cursive;
            }
        </style>
        <!-- ここまでwebFont -->
        <link href="stylesheets/button.css" rel="stylesheet">
        <link href="stylesheets/bg_move.css" rel="stylesheet">
        
        <!-- socket.ioを使えるようにしている -->
        <script src="/socket.io/socket.io.js"></script>
        <script>
            var s = io.connect('/room');

            //サーバから受け取るイベント
            s.on("connect", function() {
            });
            // 接続時
            s.on("disconnect", function(client) {
            });
            // 切断時
            s.on("S_to_C_game_start", function() {
                console.log("moveGamePage");
                moveGamePage();
            });
            s.on("S_to_C_announceMessage", function() {
            });

            //ゲーム画面に移動させる
            function moveGamePage() {
                //練習
                //ここにゲーム画面に遷移するコードを書く
                document.location = "/LocalInvaders/play";
            }
        </script>
    </head>
    <body class="bg_move"> <!-- 壁紙 -->

	<!-- ここから注意文 -->
		<nav class="navbar navbar-fixed-top"> 
    		<div class="nav">
    			<table class="table table-bordered">
    				<thead>
		  				<tr><div class="alert alert-warning">
  							<button class="close" data-dismiss="alert"></button>
    						1人目が参加してから300秒後、またはプレイヤーが4人集まったら、プレイ画面に移ります。
    					</div></tr>
		  			</thead>
    			</table>
    		</div>
		</nav>
	<!-- ここまで注意文 -->
  
  	<div class="container" style="padding:50px 0">
         <!-------------------- ここにプレイヤー参加画面の実装をする ---------------------->
         <div class="row">   
            <table class="table table-bordered table-striped">
                <tbody style="font-size:20px" bgcolor="white">
                    <% for(var i=0;i < players.length;i++) { %>
                    <% if(players[i].get("player_id")===me.player_id){ %>
                    <tr>
                        <!-- TODO:自分表示をかっこ良くして -->
                        <td class="col-xs-4"><font color="brown"><strong>You：<%= players[i].get("name") %></strong></font></td>
                    </tr>
                    <% }else{ %>
                    <tr>
                        <td class="col-xs-4"><font color="brown"><strong><%= players[i].get("name") %></strong></font></td>
                    </tr>
                    <% } %>
                    <% } %>
                </tbody>
            </table>

            <div id="msg_list" style="height:100px; overflow:auto;"></div>

        </div>
		<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.0/jquery.min.js"></script>
	    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
	    <script src="javascripts/bootstrap.min.js"></script>
	    <script src="javascripts/jquery.min.js"></script>
	    <script src="javascripts/mode.js"></script>
	    <script src="javascripts/jquery-1.3.2.min.js"></script>
	    <script src="javascripts/jquery.backgroundPosition.js"></script>
	    <script src="javascripts/add.js"></script>
        <script>
            //このページにユーザ一人でも入ったらタイマーをスタートさせる
            s.emit("C_to_S_game_start");
        </script>
    </body>
</html>
